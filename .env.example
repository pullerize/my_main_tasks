# ========== APP ==========
APP_NAME=8bit-codex
ENV=development
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_USE_RANDOM_32_CHARS
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# ========== AUTH ==========
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256
PASSWORD_HASH_ROUNDS=12

# ========== DB (SQLite для разработки) ==========
DB_ENGINE=sqlite
SQLITE_PATH=./shared_database.db

# ========== DB (PostgreSQL для продакшена) ==========
# DB_ENGINE=postgresql
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agency
POSTGRES_USER=agency_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

# ========== API ==========
API_HOST=0.0.0.0
API_PORT=8000

# ========== FRONTEND ==========
VITE_API_URL=http://localhost:8000

# ========== BACKUP ==========
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# ========== NGINX / TLS (для продакшена) ==========
NGINX_SERVER_NAME=your-domain.com
ENABLE_TLS=false
